{
    "name": "milio/cqrs-es",
    "type": "library",
    "description": "CQRS Event Sourcing classes, some extra functionality on top of broadway",
    "keywords": ["cqrs", "event sourcing"],
    "homepage": "https://github.com/Miliooo/MilioCQRSES",
    "license": "MIT",
    "authors": [
        {
            "name": "Michiel Boeckaert",
            "email": "Boeckaert@gmail.com"
        }
    ],
    "require": {
        "broadway/broadway": "0.8.*",
        "broadway/uuid-generator": "0.1.*",
        "doctrine/orm": "^2.4"
    },
    "require-dev": {
      "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "Milio\\CQRS\\": "src"
        }
    },
  "autoload-dev": {
    "psr-4": { "Milio\\CQRS\\Tests\\": "tests" }
  }
}
